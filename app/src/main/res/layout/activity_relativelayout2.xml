<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btUno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"/>

    <Button
        android:id="@+id/btDos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btUno"
        android:layout_below="@id/btUno"
        android:text="2"/>

    <Button
        android:id="@+id/btTres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btDos"
        android:layout_below="@id/btDos"
        android:text="3"/>

    <Button
        android:id="@+id/btCuatro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btTres"
        android:layout_below="@id/btTres"
        android:text="4"/>

    <Button
        android:id="@+id/btCinco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btCuatro"
        android:layout_below="@id/btCuatro"
        android:text="5"/>


</RelativeLayout>